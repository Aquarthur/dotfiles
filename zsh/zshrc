# Load zfunc
fpath=( ~/.zfunc "${fpath[@]}" )

# Configuration functions - run then unset
autoload -Uz config_zhist
autoload -Uz config_zinit
autoload -Uz config_keybindings

config_zhist
config_zinit
config_keybindings

unset -f config_zhist
unset -f config_keybindings
unset -f config_zinit

# Utility functions
autoload -Uz startup_check

# Load aliases
. ~/.zaliases

# Set path
export PATH="$PATH:/usr/local/bin"

# Local configuration
if [[ -f ~/.zshrc_local ]]; then
    . ~/.zshrc_local
fi
